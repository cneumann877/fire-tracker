{
  "name": "fire-department-tracker",
  "version": "2.0.0",
  "description": "Enterprise Fire Department Management System with comprehensive incident, event, and training tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "backup-db": "node scripts/backup-database.js create",
    "restore-db": "node scripts/backup-database.js restore",
    "maintenance": "node scripts/system-maintenance.js",
    "export-data": "node scripts/backup-database.js export",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "fire-department",
    "incident-management",
    "training-tracker",
    "emergency-services",
    "enterprise"
  ],
  "author": "Fire Department IT",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "cron": "^3.1.6",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.5"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fire-dept/tracker.git"
  },
